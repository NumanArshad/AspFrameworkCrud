@model SELab5.Models.Dashboard

@{
    ViewBag.Title = "Index";
}

<h2>Dashboard</h2>

<div>
    <h4>@Html.ActionLink("Add Person", "Create")</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.countPerson)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.countPerson)
        </dd>

    </dl>
</div>

<table class="table table-bordered">
    <tr>
        <th>
            First Name
        </th>
        <th>
            Middle Name
        </th>
        <th>
            Last Name
        </th>
        <th>
            Date Of Birth
        </th>
       <th>Added on</th>
        <th>
            Home Address
        </th>
        <th>
            Home City
        </th>
        <th>
            FaceBook Id
        </th>
        <th>
            LinkedIn Id
        </th>
       <th>Updated on</th>
        <th>
            Twitter Id
        </th>
        <th>
            Email Id
        </th>
        <th>Actions</th>
        <th>Contacts</th>
    </tr>

    @foreach (var item in Model.birthdayPerson)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.FirstName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.MiddleName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.LastName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DateOfBirth)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.AddedOn)
            </td>
            
            <td>
                @Html.DisplayFor(modelItem => item.HomeAddress)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.HomeCity)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.FaceBookAccountId)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.LinkedInId)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.UpdateOn)
            </td>
           
            <td>
                @Html.DisplayFor(modelItem => item.TwitterId)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.EmailId)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.PersonId }) |
                @Html.ActionLink("Details", "Details", new { id = item.PersonId }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.PersonId })
            </td>
            <td>
                @Html.ActionLink("Add Contacts", "Contact", new { id = item.PersonId }) |
              
            </td>
        </tr>
    }
    </table>